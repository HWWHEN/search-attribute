{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
